# Environment Configuration Example
# Copy this file to .env and update with your actual values
# DO NOT commit .env to version control!

# ============================================
# Database Configuration (SQL Server)
# ============================================
SQL_PORT=1433
SQL_SA_PASSWORD=Hospital@Strong2026!
SQL_DATABASE=HospitalAppointmentDB

# ============================================
# Redis Cache Configuration (Optional)
# ============================================
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# Backend API Configuration
# ============================================
API_PORT=5000
API_HTTPS_PORT=5001
ASPNETCORE_ENVIRONMENT=Development

# ============================================
# JWT Configuration
# ============================================
JWT_SECRET=YourSuperSecretKeyMinimum32CharactersLong!
JWT_ISSUER=HospitalAppointmentAPI
JWT_AUDIENCE=HospitalAppointmentClient
JWT_EXPIRY_MINUTES=60

# ============================================
# Email Service Configuration (SendGrid)
# ============================================
EMAIL_FROM=noreply@hospital.com
EMAIL_FROM_NAME=Hospital Appointment System
SENDGRID_API_KEY=your_sendgrid_api_key_here
SMTP_SERVER=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD=your_sendgrid_api_key_here

# ============================================
# SMS Service Configuration (Twilio)
# ============================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================
# Payment Gateway Configuration (Stripe)
# ============================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ============================================
# Frontend Configuration
# ============================================
ANGULAR_PORT=4200
API_BASE_URL=https://localhost:5001/api

# ============================================
# Hangfire Configuration
# ============================================
HANGFIRE_DASHBOARD_PATH=/hangfire
HANGFIRE_WORKER_COUNT=5

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=Information
SERILOG_MIN_LEVEL=Information

# ============================================
# CORS Configuration
# ============================================
CORS_ALLOWED_ORIGINS=http://localhost:4200,https://localhost:4200

# ============================================
# Application Settings
# ============================================
APP_NAME=Hospital Appointment Management System
APP_VERSION=1.0.0
ENABLE_SWAGGER=true
ENABLE_DETAILED_ERRORS=true
